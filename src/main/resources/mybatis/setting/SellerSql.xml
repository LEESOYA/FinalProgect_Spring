<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Seller">
	<!-- seller table insert -->
	<insert id="insertOfSeller">
		insert into seller(seller_company_number,seller_email,seller_pass) 
		values (#{seller_company_number},#{seller_email},#{seller_pass})
	</insert>
	
	<!-- seller_company table insert -->
	<insert id="insertOfSellerCompany">
		insert into seller_company 
		values (#{seller_company_number},#{seller_company_name},#{seller_company_image},#{seller_company_addr},#{seller_company_type1},#{seller_company_type2},#{seller_company_hp})
	</insert>
</mapper>